{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@app/*": ["./*"]
    },
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": false,
    "experimentalDecorators": true,
    "lib": ["dom", "esnext", "DOM.Iterable"],
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2017",
    "jsx": "react",
    "jsxFactory": "h",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules"],
}
